{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "isolatedModules": false,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": false,
    "target": "es2022",
    "baseUrl": "./",
    "jsx": "react",
    "noEmit": true,
    "paths": {
      "@lmpx-cli/source-frame-component": [
        "cli/components/source-frame"
      ],
      "@lmpx-cli/typescript-diagnostic-component": [
        "cli/components/typescript-diagnostic"
      ],
      "@lmpx-cli/renderer": [
        "cli/renderer"
      ],
      "@lmpx-code/typescript": [
        "code/typescript"
      ],
      "@lmpx-code/typescript-worker": [
        "code/typescript-worker"
      ],
      "@lmpx-code/worker-utils": [
        "code/worker-utils"
      ],
      "@lmpx-config/eslint": [
        "config/eslint"
      ],
      "@lmpx-config/prettier": [
        "config/prettier"
      ],
      "@lmpx/yarn-cli": [
        "yarn/cli"
      ],
      "@lmpx/yarn-plugin-ci": [
        "yarn/plugin-ci"
      ],
      "@lmpx/yarn-plugin-files": [
        "yarn/plugin-files"
      ],
      "@lmpx/yarn-plugin-lib": [
        "yarn/plugin-lib"
      ],
      "@lmpx/yarn-plugin-self": [
        "yarn/plugin-self"
      ],
      "@lmpx/yarn-plugin-tspace": [
        "yarn/plugin-tspace"
      ],
      "@lmpx/yarn-plugin-typecheck": [
        "yarn/plugin-typecheck"
      ],
      "@lmpx/yarn-plugin-workspaces": [
        "yarn/plugin-workspaces"
      ],
      "@lmpx/yarn-workspace-utils": [
        "yarn/workspace-utils"
      ]
    }
  },
  "include": [
    "yarn/**/*",
    "code/**/*",
    "cli/**/*",
    "config/**/*"
  ]
}
